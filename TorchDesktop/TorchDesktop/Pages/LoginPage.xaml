<Page x:Class="TorchDesktop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TorchDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="addressTextBox" Text="Server Address" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="20" />
            <Button Name="connectButton" Content="Connect" Width="100" Height="20" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock Name="errorTextBlock" IsEnabled="False" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center" Width="150" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
